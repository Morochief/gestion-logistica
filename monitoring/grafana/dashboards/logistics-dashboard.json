{
  "dashboard": {
    "id": null,
    "title": "Sistema de Gestión Logística - Dashboard",
    "tags": ["logistics", "monitoring"],
    "timezone": "America/Asuncion",
    "panels": [
      {
        "id": 1,
        "title": "Estado de Servicios",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"backend\"}",
            "legendFormat": "Backend"
          },
          {
            "expr": "up{job=\"frontend\"}",
            "legendFormat": "Frontend"
          },
          {
            "expr": "up{job=\"db\"}",
            "legendFormat": "Database"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Uso de CPU por Servicio",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"logistics.*\"}[5m]) * 100",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Uso de Memoria",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"logistics.*\"} / 1024 / 1024",
            "legendFormat": "{{name}} (MB)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Conexiones a Base de Datos",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"logistica\"}",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Tamaño de Base de Datos",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"logistica\"} / 1024 / 1024",
            "legendFormat": "Database Size (MB)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Consultas por Segundo",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"logistica\"}[5m])",
            "legendFormat": "Transactions/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}